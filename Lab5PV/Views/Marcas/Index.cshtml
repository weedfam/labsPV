@model IEnumerable<ESTeCar.Models.Marca>

@{
    ViewData["Title"] = "Marcas Existentes";
}

<h1>Marcas Existentes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Designacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Designacao)
            </td>
            <td>
                <a asp-controller="Carros" asp-action="CarrosByMarca" asp-route-marca="@item.Designacao">Carros</a>
            </td>
        </tr>
}
    </tbody>
</table>
